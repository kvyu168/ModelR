    <Grid x:Key="FlyoutMessageBarDefaultHeader">
        <Path Stretch="Uniform" Width="18" Height="18" Margin="0"/>
    </Grid>

    <Style TargetType="local:FlyoutMessageBar">
        <Style.Resources>
            <BooleanToVisibilityConverter x:Key="boolConverter"/>
        </Style.Resources>
        <Setter Property="Background" Value="LightYellow"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FlyoutMessageBar">
                    <Border x:Name="border" SnapsToDevicePixels="True" UseLayoutRounding="True"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="{TemplateBinding Padding}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" Content="{TemplateBinding Header}" Margin="0,0,5,0" SnapsToDevicePixels="True"/>
                                <ContentPresenter Grid.Column="1" VerticalAlignment="Center" SnapsToDevicePixels="True"/>
                                <Image x:Name="PART_CloseImage" Grid.Column="2" Source="{TemplateBinding CloseImage}" Stretch="None" Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" SnapsToDevicePixels="True"
                                       Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ShowCloseButton, Converter={StaticResource boolConverter}}" />
                            </Grid>
                        </Grid>

                        <!--transformation & effects-->
                        <Border.RenderTransform>
                            <TranslateTransform X="0" Y="0" />
                        </Border.RenderTransform>

                        <!--visual states-->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="Common">
                                <VisualState x:Name="Open">
                                    <Storyboard>
                                        <DoubleAnimation x:Name="openAnimation"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="RenderTransform.Y"
                                                         To="0" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CircleEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Closed">
                                    <Storyboard>
                                        <DoubleAnimation x:Name="closeAnimation"
                                                         Storyboard.TargetName="border"
                                                         Storyboard.TargetProperty="RenderTransform.Y"
                                                         To="-10" Duration="0:0:0.5">
                                            <DoubleAnimation.EasingFunction>
                                                <CircleEase EasingMode="EaseInOut" />
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
